{
  "author": "Stefan Maric <me@stefanmaric.com> (http://stefanmaric.com)",
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ]
  },
  "description": "Simple Table of Contents generator for DOM and Markdown",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babili": "^0.1.4",
    "documentation": "^6.0.0",
    "echint": "^4.0.1",
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "gh-pages": "^1.0.0",
    "jsdom": "^11.3.0",
    "rollup": "^0.56.4",
    "rollup-plugin-commonjs": "^8.2.1",
    "tap": "^11.0.0"
  },
  "echint": {
    "ignore": [
      "coverage/**",
      "dist/**",
      "_docs/**",
      ".nyc-output/**"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "standard"
    ],
    "root": true,
    "rules": {
      "max-len": [
        "error",
        80,
        2,
        {
          "ignoreComments": false,
          "ignoreRegExpLiterals": true,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true,
          "ignoreUrls": true
        }
      ]
    }
  },
  "eslintIgnore": [
    "dist/",
    "_docs/"
  ],
  "homepage": "http://stefanmaric.com/simpletoc/",
  "keywords": [
    "table of contents",
    "table",
    "contents",
    "toc",
    "dom",
    "markdown",
    "md"
  ],
  "license": "MIT",
  "main": "dist/simpletoc.umd.js",
  "module": "dist/simpletoc.esm.js",
  "name": "simpletoc",
  "repository": {
    "type": "git",
    "url": "https://github.com/stefanmaric/simpletoc.git"
  },
  "scripts": {
    "build": "for f in src/*.js; do npm run build-umd -- $f && npm run build-esm -- $f; done",
    "build-esm": "f(){ BN=$(basename $1 .js); rollup -c rollup.config.js -f es $1 | tee dist/$BN.esm.js | babili > dist/$BN.esm.min.js; }; f",
    "build-umd": "f(){ BN=$(basename $1 .js); rollup -c rollup.config.js -f umd -n simpletoc $1 | babel -f $1 | tee dist/$BN.umd.js | babili > dist/$BN.umd.min.js; }; f",
    "docs": "documentation build --config .documentation.yml -f html -o _docs src/",
    "lint": "echint && eslint . && documentation lint src/",
    "publish-docs": "npm run docs && gh-pages --dist _docs",
    "test": "npm run lint && tap 'test/**/*.js'"
  },
  "version": "0.5.0"
}
