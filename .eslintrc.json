{
  "extends": [
    "airbnb-base",
    "standard"
  ],
  "root": true,
  "rules": {
    "max-len": [
      "error",
      80,
      2,
      {
        "ignoreComments": false,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreUrls": true
      }
    ]
  }
}
